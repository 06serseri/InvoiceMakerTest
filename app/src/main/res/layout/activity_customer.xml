<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutCustomer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".Customer.CustomerActivity">

    <Button
        android:id="@+id/buttonAddCustomerActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Customer" />

    <Button
        android:id="@+id/buttonViewCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/buttonAddCustomerActivity"
        android:text="View Customers"
        android:layout_marginLeft="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerViewCustomer"
        android:layout_below="@+id/buttonAddCustomerActivity"/>


</RelativeLayout>